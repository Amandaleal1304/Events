<h1>Participantes</h1>

{{! Formulário para criar ou editar um participante }}
<form action="/participants/{{#if action }}save{{else}}create{{/if}}" method="post">
    <input type="hidden" name="id" value="{{participant_editing.id}}">

    <label for="name">Nome do Participante</label><br>
    <input type="text" id="name" name="name" value="{{participant_editing.name}}" required><br><br>

    <label for="age">Idade</label><br>
    <input type="number" id="age" name="age" value="{{participant_editing.age}}" required><br><br>

    <label for="telephone">Telefone</label><br>
    <input type="text" id="telephone" name="telephone" value="{{participant_editing.telephone}}" required><br><br>

    <button type="submit">{{#if action }}Salvar Edição{{else}}Criar Participante{{/if}}</button>
</form>

<hr>

{{! Tabela para listar todos os participantes }}
<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Idade</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {{! Itera sobre a lista de participantes passada pelo controller }}
        {{#each participants}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.age}}</td>
            <td>{{this.telephone}}</td>
            <td style="display: flex; justify-content: space-evenly;">
                {{! Formulário para o botão de editar }}
                <form action="/participants/edit" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">Editar</button>
                </form>

                {{! Formulário para o botão de deletar }}
                <form action="/participants/delete" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">Excluir</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>